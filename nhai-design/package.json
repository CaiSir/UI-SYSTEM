{
  "name": "nhai-design",
  "version": "1.0.0",
  "description": "NHAI Design System - Interactive component showcase and online editor",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "clean": "rm -rf dist node_modules/.vite",
    "serve:examples": "http-server examples -p 8080 -o",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "keywords": [
    "nhai",
    "design-system",
    "ui-components",
    "vue",
    "typescript",
    "component-showcase"
  ],
  "author": "NHAI Team",
  "license": "MIT",
  "dependencies": {
    "@monaco-editor/loader": "^1.6.0",
    "monaco-editor": "^0.54.0",
    "nhai-framework": "file:../nhai-framework",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-vue": "^9.0.0",
    "http-server": "^14.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitepress": "^1.0.0",
    "vue-tsc": "^1.8.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
